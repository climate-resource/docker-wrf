{
  "variables": {
    "git_sha": "none",
    "name_prefix": "wrf-standalone",
    "deploy_user": "",
    "deploy_pass": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "augury-image-base:latest",
      "pull": false,
      "discard": false,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "DEPLOY_USER={{user `deploy_user`}}",
        "DEPLOY_PASS={{user `deploy_pass`}}"
      ],
      "scripts": [
        "scripts/install_deps.sh",
        "scripts/build_wrf.sh",
        "scripts/add_augury.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "augury/{{user `name_prefix`}}",
        "tag": "{{user `git_sha`}}"
      },
      {
        "type": "docker-tag",
        "repository": "augury/{{user `name_prefix`}}",
        "tag": "latest"
      }
    ]
  ]
}