{
  "variables": {
    "git_sha": "none",
    "name_prefix": "wrf-standalone",
  },
  "builders": [
    {
      "type": "docker",
      "image": "wrf-image-base:latest",
      "pull": false,
      "discard": false,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/install_deps.sh",
        "scripts/build_wrf.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "wrf/{{user `name_prefix`}}",
        "tag": "{{user `git_sha`}}"
      },
      {
        "type": "docker-tag",
        "repository": "wrf/{{user `name_prefix`}}",
        "tag": "latest"
      }
    ]
  ]
}