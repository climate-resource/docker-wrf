{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "aws_region": "",
    "aws_source_ami": "",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "aws_ssh_private_key": "",
    "git_sha": "none",
    "name_prefix": "wrf-standalone"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "instance_type": "c5.xlarge",
      "ssh_username": "ubuntu",
      "associate_public_ip_address": true,
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "ami_name": "{{user `name_prefix`}}-{{user `git_sha`}}",
      "ssh_keypair_name": "jared-laptop",
      "ssh_private_key_file": "{{user `aws_ssh_private_key`}}"
    },
    {
      "type": "docker",
      "image": "augury-image-base:latest",
      "pull": false,
      "discard": false,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "keys/id_rsa",
      "destination": "/home/ubuntu/.ssh/id_rsa"
    },
    {
      "type": "file",
      "source": "keys/id_rsa.pub",
      "destination": "/home/ubuntu/.ssh/id_rsa.pub"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/install_deps.sh",
        "scripts/build_wrf.sh",
        "scripts/add_augury.sh",
        "scripts/setup_logging.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "augury/{{user `name_prefix`}}",
        "tag": "{{user `git_sha`}}"
      },
      {
        "type": "docker-tag",
        "repository": "augury/{{user `name_prefix`}}",
        "tag": "latest"
      }
    ]
  ]
}