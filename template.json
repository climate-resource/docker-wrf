{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "ami_name_prefix": "wrf-standalone",
    "aws_region": "",
    "aws_source_ami": "",
    "aws_vpc_id": "",
    "aws_subnet_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "{{user `aws_region`}}",
      "instance_type": "c4.2xlarge",
      "ssh_username": "ubuntu",
      "associate_public_ip_address": true,
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "ami_name": "{{user `ami_name_prefix`}} {{isotime \"2006-01-02 15-04-05\"}}",
      "ssh_keypair_name": "jared-laptop",
      "ssh_private_key_file": "/home/jared/.ssh/id_rsa"
    },
    {
      "type": "docker",
      "image": "augury-image-base:latest",
      "pull": false,
      "discard": false,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "keys/id_rsa",
      "destination": "/home/ubuntu/.ssh/id_rsa"
    },
    {
      "type": "file",
      "source": "keys/id_rsa.pub",
      "destination": "/home/ubuntu/.ssh/id_rsa.pub"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/install_deps.sh",
        "scripts/build_wrf.sh",
        "scripts/add_augury.sh",
        "scripts/setup_logging.sh"
      ]
    }
  ]
}